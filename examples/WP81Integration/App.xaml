<Application
    x:Class="CLRNetSampleApp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CLRNetSampleApp">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Application-specific resources -->
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Custom styles for CLRNet Sample App -->
            <Style x:Key="CLRNetButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{ThemeResource PhoneAccentBrush}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Margin" Value="0,5"/>
                <Setter Property="MinHeight" Value="40"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
            </Style>
            
            <Style x:Key="CLRNetHeaderStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="FontWeight" Value="Light"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
            </Style>
            
            <Style x:Key="CLRNetSubHeaderStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="0,5,0,0"/>
            </Style>
            
            <Style x:Key="CLRNetSectionTitleStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Margin" Value="0,0,0,10"/>
            </Style>
            
            <Style x:Key="CLRNetContentBorderStyle" TargetType="Border">
                <Setter Property="Background" Value="{ThemeResource PhoneChromeBrush}"/>
                <Setter Property="CornerRadius" Value="5"/>
                <Setter Property="Margin" Value="0,0,0,15"/>
                <Setter Property="Padding" Value="15"/>
            </Style>
            
            <!-- Color resources -->
            <SolidColorBrush x:Key="CLRNetAccentBrush" Color="#FF0078D4"/>
            <SolidColorBrush x:Key="CLRNetSuccessBrush" Color="#FF107C10"/>
            <SolidColorBrush x:Key="CLRNetWarningBrush" Color="#FFFF8C00"/>
            <SolidColorBrush x:Key="CLRNetErrorBrush" Color="#FFE74C3C"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>